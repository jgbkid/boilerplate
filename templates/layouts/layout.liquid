<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
        <meta name="description" content="">

        <!-- ENABLE OFFLINE APP FUNCTIONALITY -->
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-title" content="">

        <!-- SET STATUS BAR STYLE -->
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />

        <!-- Title block allowing child pages to override -->
        <title>{% block title %}Project Title{% endblock %}</title>

        <!--Fonts (FontAwesome, Google Favorites)-->
        <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.min.css">
        <link href='http://fonts.googleapis.com/css?family=Raleway:400,300,500,600,800,700,900,100,200' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800|Open+Sans+Condensed:300,300italic,700' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Josefin+Sans:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css'>

        <!-- Favicon / touch-icon -->
        <link rel="shortcut icon" type="image/ico" href="/favicon.ico">
        <link rel="apple-touch-icon" type="image/png" href="/apple-touch-icon.png">

        <!-- Styles -->
        {{ "styles.css" | asset_url | stylesheet_tag }}

        <!-- Style block allowing child pages to inject their own styles -->
        {% block styles %}{% endblock %}

        <!-- Modernizr -->   
        {{ "modernizr.js" | asset_url | script_tag }}
        
        <!--[if gte IE 9]>
          <style type="text/css">
            .gradient {
               filter: none;
            }
          </style>
        <![endif]-->


        <!--[if lt IE 9]>
            <script src="//s3.amazonaws.com/nwapi/nwmatcher/nwmatcher-1.2.5-min.js"></script>
            <script src="//html5base.googlecode.com/svn-history/r38/trunk/js/selectivizr-1.0.3b.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.1.0/respond.min.js"></script>

            <link rel="stylesheet" type="text/css" href="assets/styles/styles-ie8.min.css" />
        <![endif]-->
    </head>
    
    <body>
        <div id="wrapper">
            <!-- Include -->
            {% include "header" %}
            <!-- Content block, child page inject content -->
            {% block content %}{% endblock %}
        </div>
        <!-- Script block allowing child pages to inject their own scripts -->
        {% block scripts %}{% endblock %}
        
        {% include "scripts" %}
    </body>
</html>